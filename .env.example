# Anthropic API Key for Claude Opus 4.6 and Haiku 4.5
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: API keys for external data sources (most are free/public)
# NASA POWER API (no key required, but can add if available)
NASA_API_KEY=

# India Meteorological Department (if applicable)
IMD_API_KEY=

# Other API keys as needed
AGMARKNET_API_KEY=

# Firebase Firestore (optional -- falls back to in-memory storage if missing)
# Option 1: Individual credentials
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# Option 2: Base64-encoded service account JSON (alternative to Option 1)
# Generate with: cat serviceAccountKey.json | base64
FIREBASE_SERVICE_ACCOUNT_BASE64=
