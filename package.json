{
  "name": "kisanmind",
  "version": "1.0.0",
  "description": "AI-powered agricultural intelligence and profit advisory system for farmers",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build:mcp": "npm run build:mcp-soil && npm run build:mcp-water && npm run build:mcp-climate && npm run build:mcp-market && npm run build:mcp-scheme",
    "build:mcp-soil": "cd mcp-servers/mcp-soil-intel && npm run build",
    "build:mcp-water": "cd mcp-servers/mcp-water-intel && npm run build",
    "build:mcp-climate": "cd mcp-servers/mcp-climate-intel && npm run build",
    "build:mcp-market": "cd mcp-servers/mcp-market-intel && npm run build",
    "build:mcp-scheme": "cd mcp-servers/mcp-scheme-intel && npm run build",
    "build:orchestrator": "cd orchestrator && tsc",
    "build": "npm run build:mcp && npm run build:orchestrator",
    "dev": "cd frontend && npm run dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "start:orchestrator": "cd orchestrator && node dist/orchestrator.js"
  },
  "keywords": [
    "agriculture",
    "ai",
    "claude",
    "mcp",
    "farming",
    "hackathon"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/jest": "^29.5.14",
    "typescript": "^5.7.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2"
  }
}
